<!DOCTYPE html>
<html>
<head>
  <title>ProjectHistory</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
<nav class="bg-white shadow">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <div class="flex justify-start">
        <a href="<%= root_path %>" class="text-gray-800 text-lg font-semibold">Project Conversion History</a>
      </div>
      <div class="flex justify-end">
        <% if user_signed_in? %>
          <span class="text-gray-600 mr-4"><%= current_user.full_name %></span>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-400" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
<main class="container mx-auto px-4 mt-4">
  <div data-controller="alerts" id="alert-container">
    <% alert_classes = "hidden px-4 py-3 rounded fixed top-0 w-5/6 mb-4 text-center" %>
    <%= content_tag :div, '', class: "bg-green-100 border border-green-400 text-green-700 #{alert_classes}",
                    role: "alert", data: {alerts_target: 'successContainer'} %>
    <%= content_tag :div, '', class: "bg-red-100 border border-red-400 text-red-700 #{alert_classes}",
                    role: "alert", data: {alerts_target: 'errorContainer'} %>
  </div>
  <%= yield %>
</main>
</body>
</html>
